<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_main"
        android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PILIH PEMINJAMAN"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_projector"
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="36dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@+id/ic_tone"
                app:cardElevation="16dp">

            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_projector"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proyektor"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginBottom="36dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_cable"
                android:layout_width="180dp"
                android:layout_height="200dp"
                app:cardCornerRadius="36dp"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_below="@+id/ic_tone"
                app:cardElevation="16dp">

            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="86dp"
                    android:src="@drawable/ic_cable"
                    android:layout_marginTop="36dp"
                    android:layout_gravity="center_horizontal"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kabel/\nStop Kontak"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>