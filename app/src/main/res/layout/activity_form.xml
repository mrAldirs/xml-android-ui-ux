<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_main">

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MASUKKAN DATA"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:textStyle="bold"/>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/content_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="16dp"
            android:layout_below="@+id/tv_title"
            app:cardElevation="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingHorizontal="12dp"
                android:background="@color/white">

            <TextView
                    android:id="@+id/inp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proyektor"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            <TextView
                    android:id="@+id/inp_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P01"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penanggung Jawab"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/inp_pj"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="@drawable/rounded_edittext2"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:paddingHorizontal="8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelas"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/inp_kelas"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edittext2"
                    android:textSize="14sp"
                    android:paddingHorizontal="8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Peminjaman"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/inp_tgl"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edittext2"
                    android:textSize="14sp"
                    android:paddingHorizontal="8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/inp_waktu"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edittext2"
                    android:textSize="14sp"
                    android:paddingHorizontal="8dp"/>

            <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Pinjam"
                    android:layout_gravity="end"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp"
                    android:layout_marginStart="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>